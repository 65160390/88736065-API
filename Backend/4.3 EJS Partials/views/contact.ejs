<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css">
    <link rel="stylesheet" href="/styles/layout.css">
    <link rel="stylesheet" href="/styles/content.css">
    <title>Contact</title>
</head>
<body>
    <%- include("partials/header.ejs") %>
    <main>
        <h1>Contact Me</h1>
        <form action="/submit" method="post">
            <input type="text" class="feedback-input" name="name" placeholder="Name">
            <input type="email" class="feedback-input" name="email" placeholder="Email">
            <textarea class="feedback-input" name="comment" placeholder="Comment"></textarea>
            <button type="submit">SUBMIT</button>
        </form>
    </main>
    <%- include("partials/footer") %>
    <script>
        // ตรวจสอบ query parameter และแสดง alert
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('success') === 'true') {
            alert('Form submitted successfully!');
        }
    </script>
</body>
</html>